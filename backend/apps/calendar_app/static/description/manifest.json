{
  "name": "Calendar",
  "code": "calendar_app",
  "version": "1.0.0",
  "description": "Complete calendar application with event management, recurring events, attendees, and notifications",
  "author": "Linguify Team",
  "category": "Productivity",
  "icon": "bi-calendar-event",
  "url": "/calendar/",
  "color": "#007bff",
  "features": [
    "Event creation and management",
    "Recurring events with complex patterns",
    "Multi-user attendee management",
    "Email invitations and responses",
    "Multiple calendar views (month, week, day, agenda)",
    "Event notifications and alarms",
    "Event types and categorization",
    "Privacy settings (public, private, confidential)",
    "iCal export/import support",
    "Real-time calendar updates"
  ],
  "dependencies": {
    "python": [
      "django>=4.0",
      "djangorestframework>=3.14",
      "python-dateutil>=2.8",
      "pytz>=2022.1"
    ],
    "javascript": [
      "fullcalendar>=6.0"
    ]
  },
  "permissions": [
    "calendar.view_calendarevent",
    "calendar.add_calendarevent", 
    "calendar.change_calendarevent",
    "calendar.delete_calendarevent"
  ],
  "urls": {
    "main": "/calendar/",
    "create": "/calendar/event/create/",
    "api": "/calendar/api/"
  },
  "models": [
    "CalendarEvent",
    "CalendarEventType", 
    "CalendarAttendee",
    "CalendarRecurrence",
    "CalendarAlarm"
  ],
  "screenshots": [
    "calendar_month_view.png",
    "event_details.png", 
    "create_event.png"
  ],
  "supported_languages": ["en", "fr"],
  "installable": true,
  "auto_install": false,
  "application": true
}