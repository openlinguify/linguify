                        </button>
                        <button class="list-group-item list-group-item-action" data-view="form" data-url="/api/v1/notebook/form/">
                            üìù Vue Formulaire
                        </button>
                        <button class="list-group-item list-group-item-action" data-view="search" data-url="/api/v1/notebook/search/">
                            üîç Recherche Avanc√©yhyhye
                        </button>
                    </div>
                </div>

                <!-- Statistiques -->
                <div class="actions-bar">
                    <h5>‚ö° Actions</h5>
                    <div class="stats-cards">
                        <div class="stat-card">
                            <h6>Total</h6>
                            <h4><field name="stats_total"/></h4>
                        </div>
                        <div class="stat-card">
                            <h6>√âpingl√©es</h6>
                            <h4><field name="stats_pinned"/></h4>
                        </div>
                        <div class="stat-card">
                            <h6>Archiv√©es</h6>
                            <h4><field name="stats_archived"/></h4>
                        </div>
                    </div>
                </div>

                <!-- Formulaire d'√©dition de notes -->
                <form id="noteForm" class="note-editor mt-4">
                    <h6>‚úèÔ∏è √âditeur de Notes</h6>
                    <div class="mt-3">
                        <field name="id" invisible="1"/>

                        <group>
                            <field name="title" placeholder="Titre de la note" class="form-control form-control-sm"/>
                        </group>

                        <group>
                            <field name="content" widget="text" placeholder="Contenu de la note" class="form-control form-control-sm" rows="4"/>
                        </group>

                        <group col="2">
                            <field name="language" class="form-select form-select-sm">
                                <option value="">Choisir...</option>
                                <option value="FR">Fran√ßais</option>
                                <option value="EN">Anglais</option>
                                <option value="ES">Espagnol</option>
                                <option value="DE">Allemand</option>
                            </field>

                            <field name="priority" class="form-select form-select-sm">
                                <option value="LOW">Basse</option>
                                <option value="MEDIUM" selected="1">Moyenne</option>
                                <option value="HIGH">Haute</option>
                            </field>
                        </group>

                        <footer>
                            <button type="button" class="btn btn-primary btn-sm oe_highlight" special="save">
                                üíæ Sauvegarder
                            </button>
                            <button type="button" class="btn btn-secondary btn-sm" special="cancel">
                                üóëÔ∏è Nouveau
                            </button>
                        </footer>
                    </div>
                </form>
            </div>
        </field>
    </record>
</linguify>