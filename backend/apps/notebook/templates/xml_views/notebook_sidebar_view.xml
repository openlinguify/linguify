        <field name="model">notebook.note</field>
        <field name="arch" type="xml">
            <div class="sidebar-content">
                <!-- En-t√™te de la vue -->
                <div class="page-header-sidebar">
                    <h5> Vue: <field name="view_id"/></h5>
                    <small class="text-muted"><field name="model_name"/> | <field name="view_type"/></small>
                </div>

                <!-- Navigation entre vues -->
                <div class="navigation">
                    <h5>üìì Vues Nogtgtgttgtebook</h5>
                    <div class="list-group">
                        <button class="list-group-item list-group-item-action" data-view="kanban" data-url="/api/v1/notebook/kanban/">
                            üé® Vue Kanban
