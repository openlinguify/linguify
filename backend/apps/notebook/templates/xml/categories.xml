<?xml version="1.0" encoding="utf-8"?>
<linguify>
    <data>
        <!-- Vue formulaire pour les catégories -->
        <record id="category_form_view" model="ir.ui.view">
            <field name="name">category.form</field>
            <field name="model">notebook.category</field>
            <field name="arch" type="xml">
                <form string="Catégorie">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de la catégorie"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="parent"/>
                                <field name="user"/>
                            </group>
                            <group>
                                <field name="created_at"/>
                                <field name="notes_count"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Description de la catégorie..."/>
                            </page>
                            <page string="Notes associées">
                                <field name="notes" mode="tree">
                                    <tree>
                                        <field name="title"/>
                                        <field name="note_type"/>
                                        <field name="priority"/>
                                        <field name="created_at"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue liste pour les catégories -->
        <record id="category_tree_view" model="ir.ui.view">
            <field name="name">category.tree</field>
            <field name="model">notebook.category</field>
            <field name="arch" type="xml">
                <tree string="Catégories">
                    <field name="name"/>
                    <field name="parent"/>
                    <field name="notes_count"/>
                    <field name="created_at"/>
                    <field name="user"/>
                </tree>
            </field>
        </record>

        <!-- Vue kanban pour les catégories -->
        <record id="category_kanban_view" model="ir.ui.view">
            <field name="name">category.kanban</field>
            <field name="model">notebook.category</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="notes_count"/>
                    <field name="created_at"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="oe_kanban_content">
                                    <div class="oe_kanban_title">
                                        <field name="name"/>
                                    </div>
                                    <div class="oe_kanban_details">
                                        <field name="notes_count"/> notes
                                    </div>
                                    <div class="oe_kanban_bottom">
                                        <field name="created_at"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue recherche pour les catégories -->
        <record id="category_search_view" model="ir.ui.view">
            <field name="name">category.search</field>
            <field name="model">notebook.category</field>
            <field name="arch" type="xml">
                <search string="Rechercher catégories">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="parent"/>
                    <filter string="Catégories racines" domain="[('parent', '=', False)]"/>
                    <filter string="Sous-catégories" domain="[('parent', '!=', False)]"/>
                    <group expand="0" string="Grouper par">
                        <filter string="Parent" context="{'group_by': 'parent'}"/>
                        <filter string="Utilisateur" context="{'group_by': 'user'}"/>
                        <filter string="Date de création" context="{'group_by': 'created_at'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</linguify>