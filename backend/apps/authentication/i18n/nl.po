# Login page
msgid "Login"
msgstr "Inloggen"

msgid "Email or username"
msgstr "E-mail of gebruikersnaam"

msgid "Password"
msgstr "Wachtwoord"

msgid "Remember me"
msgstr "Onthoud mij"

msgid "Forgot password?"
msgstr "Wachtwoord vergeten?"

msgid "Don't have an account?"
msgstr "Nog geen account?"

msgid "Create an account"
msgstr "Account aanmaken"

# Login messages
msgid "Welcome, %(username)s!"
msgstr "Welkom, %(username)s!"

msgid "Invalid username or password."
msgstr "Ongeldige gebruikersnaam of wachtwoord."

msgid "Sign in to your account"
msgstr "Meld je aan bij je account"

msgid "or"
msgstr "of"

msgid "Back to home"
msgstr "Terug naar startpagina"

# Register page
msgid "Sign up"
msgstr "Registreren"

msgid "Username"
msgstr "Gebruikersnaam"

msgid "Email"
msgstr "E-mail"

msgid "First name"
msgstr "Voornaam"

msgid "Last name"
msgstr "Achternaam"

msgid "Native language"
msgstr "Moedertaal"

msgid "Target language"
msgstr "Doeltaal"

msgid "I agree to the"
msgstr "Ik ga akkoord met de"

msgid "Terms and Conditions"
msgstr "Algemene Voorwaarden"

msgid "Privacy Policy"
msgstr "Privacybeleid"

msgid "Already have an account?"
msgstr "Al een account?"

# Error messages
msgid "Invalid username or password"
msgstr "Ongeldige gebruikersnaam of wachtwoord"

msgid "This email is already registered"
msgstr "Dit e-mailadres is al geregistreerd"

msgid "This username is already taken"
msgstr "Deze gebruikersnaam is al bezet"

msgid "Username cannot be empty"
msgstr "Gebruikersnaam kan niet leeg zijn"

msgid "Username must contain at least 3 characters"
msgstr "Gebruikersnaam moet minimaal 3 tekens bevatten"

msgid "Username cannot exceed 30 characters"
msgstr "Gebruikersnaam mag niet meer dan 30 tekens bevatten"

msgid "Username can only contain letters, numbers, _ and -"
msgstr "Gebruikersnaam kan alleen letters, cijfers, _ en - bevatten"

msgid "Username must contain at least one letter or number"
msgstr "Gebruikersnaam moet minimaal één letter of cijfer bevatten"

msgid "This username is available"
msgstr "Deze gebruikersnaam is beschikbaar"

msgid "Native language and target language cannot be the same"
msgstr "Moedertaal en doeltaal kunnen niet hetzelfde zijn"

msgid "Checking availability..."
msgstr "Beschikbaarheid controleren..."

msgid "Error during verification"
msgstr "Fout tijdens verificatie"

msgid "Passwords do not match"
msgstr "Wachtwoorden komen niet overeen"