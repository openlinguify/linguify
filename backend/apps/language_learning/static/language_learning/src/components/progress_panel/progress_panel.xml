<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="language_learning.ProgressPanel">
    <div class="card">
        <div class="card-header">
            <h6 class="card-title mb-0">
                <i class="bi bi-graph-up me-2"></i>
                Progression
            </h6>
        </div>
        <div class="card-body">
            <div class="text-center">
                <!-- Streak -->
                <div class="mb-4">
                    <div class="d-flex align-items-center justify-content-center mb-2">
                        <span class="display-4 me-2" t-esc="streakIcon"/>
                        <div>
                            <h3 class="text-primary mb-0" t-esc="props.userStreak"/>
                            <small class="text-muted">jours de suite</small>
                        </div>
                    </div>
                </div>

                <!-- Units progress -->
                <div class="mb-4">
                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-success mb-0" t-esc="completedUnits"/>
                            <small class="text-muted">Complétées</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-info mb-0" t-esc="props.unitsCount"/>
                            <small class="text-muted">Total</small>
                        </div>
                    </div>
                </div>

                <!-- Action button -->
                <button class="btn btn-primary btn-lg w-100" t-on-click="onContinueClick">
                    <i class="bi bi-play-circle me-2"></i>
                    Continuer l'apprentissage
                </button>
            </div>

            <!-- Daily goal (placeholder) -->
            <div class="mt-4 pt-3 border-top">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <small class="text-muted">Objectif quotidien</small>
                    <small class="text-success">
                        <i class="bi bi-check-circle-fill me-1"></i>
                        Atteint !
                    </small>
                </div>
                <div class="progress" style="height: 6px;">
                    <div class="progress-bar bg-success" style="width: 100%"></div>
                </div>
            </div>
        </div>
    </div>
</t>

</templates>