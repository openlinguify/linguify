env-prod:
	@echo "ğŸš€ Passage en mode PRODUCTION..."
	@echo "âš ï¸  ATTENTION : Vous allez travailler sur la base de PRODUCTION !"
	@read -p "ÃŠtes-vous sÃ»r ? (tapez 'oui' pour confirmer) : " confirm; \
	if [ "$$confirm" = "oui" ]; then \
		sed -i 's/DJANGO_ENV="development"/DJANGO_ENV="production"/' .env; \
		echo "âœ… Environnement changÃ© : PRODUCTION"; \
		echo "   Base de donnÃ©es : Supabase"; \
		make env; \
	else \
		echo "âŒ Changement annulÃ©"; \
	fi

