# OpenLinguify Portal Environment Variables
# Copy this file to .env and fill in your actual values

# Django Core Settings
SECRET_KEY=your-secret-key-here-minimum-50-characters-long
DEBUG=False
DJANGO_ENV=production

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=openlinguify.com,www.openlinguify.com,linguify-portal.onrender.com,your-render-service.onrender.com

# Email Settings
DEFAULT_FROM_EMAIL=noreply@openlinguify.com
BUG_REPORT_EMAIL=bugs@openlinguify.com

# SMTP Settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Admin Email (for setup scripts)
ADMIN_EMAIL=admin@openlinguify.com

# Database Settings (for production, use DATABASE_URL instead)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Local Database Settings (for development)
DB_NAME=db_linguify_portal
DB_USER=postgres
DB_PASSWORD=your-local-db-password
DB_HOST=localhost
DB_PORT=5432

# Backend API URL
BACKEND_API_URL=https://app.openlinguify.com