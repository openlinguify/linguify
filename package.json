{
  "name": "linguify-platform",
  "version": "1.0.0",
  "description": "Open Linguify - Open Source Education Application",
  "scripts": {
    "build:css": "npm run build:tailwind",
    "watch:css": "npm run watch:tailwind",
    "build:tailwind": "node build-tailwind.js",
    "watch:tailwind": "node build-tailwind.js --watch",
    "build:tailwind:prod": "NODE_ENV=production node build-tailwind.js",
    "dev": "npm run watch:tailwind",
    "build": "npm run build:tailwind:prod",
    "dev:full": "npm run watch:tailwind & python backend/manage.py runserver"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "cmdk": "^1.1.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "chokidar": "^3.6.0",
    "tailwindcss": "^3.4.15"
  },
  "keywords": [
    "django",
    "tailwindcss",
    "htmx",
    "language-learning",
    "education",
    "linguify"
  ],
  "author": "Linguify Team",
  "license": "MIT"
