# OpenLinguify Documentation Environment Variables
# Copy this file to .env and fill in your actual values

# Django Core Settings
SECRET_KEY=your-secret-key-here-minimum-50-characters-long-and-random
DEBUG=False
DJANGO_ENV=production

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com,openlinguify-docs.onrender.com,www.openlinguify.com,openlinguify.com

# Database Settings (SQLite by default, can be changed to PostgreSQL for production)
DATABASE_URL=sqlite:///./db.sqlite3

# Static Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# External Links
MAIN_SITE_URL=https://www.openlinguify.com
GITHUB_REPO_URL=https://github.com/openlinguify/linguify
DISCORD_URL=https://discord.gg/PJ8uTzSS

# Security Settings (set to True for production HTTPS)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False